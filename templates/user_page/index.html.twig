{% extends 'base.html.twig' %}

{% block title %}User Page{% endblock %}

{% block body %}
    {% for user in users %}
        {% if user.contract is empty %}
            <div class="alert alert-warning" role="alert">
                {{ user.name }} heeft nog geen uren contact ingevuld
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endif %}
    {% endfor %}

    <div class="container-fluid">
        <div class="row mt-3">
            <div class="col-sm">
                <div class="card mb-4">
                    <div class="card-header">
                        <div class="card-title">Gebruikers overzicht ({{ users|length }})</div>
                    </div>
                    <div class="card-body">
                        {% if is_granted("ROLE_ADMIN") %}
                            <a href="{{ path('app_register') }}" class="btn btn-success btn-sm">Nieuwe gebruiker</a>
                        {% endif %}
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>Username</th>
                                    <th>Voornaam</th>
                                    <th>Achternaam</th>
                                    <th>Rechten</th>
                                    <td>Actie</td>
                                </tr>
                                </thead>
                                <tbody>
                                {% for user in users %}
                                    <tr>
                                        <td>{{ user.username }}</td>
                                        <td>{{ user.name }}</td>
                                        <td>{{ user.lastName }}</td>
                                        <td>
                                            {% for roles in user.roles %}
                                                {% if roles == 'ROLE_ADMIN' %}
                                                    Admin
                                                    {% elseif roles == 'ROLE_USER' %}
                                                    User
                                                {% endif %}
                                            {% endfor %}
                                        </td>
                                        <td>
                                        {% if is_granted('ROLE_ADMIN') %}
                                            <a href="{{ path('app_userpage_deleteuser', {'id': user.id }) }}" class="btn btn-danger btn-sm">Delete</a>
                                        {% else %}
                                            <a class="btn btn-danger disabled">Delete</a>
                                        {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% for user in users %}
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">{{ user.name }}</div>
                        <div class="card-options">
                            <p class="text-muted m-0 card-options">{{ "monday this week"|date("m/d/Y") }} - {{ "saturday this week"|date("m/d/Y") }}</p>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>Uren</th>
                                    <th>Werkbon</th>
                                    <th>Datum</th>
                                    <th>Actie</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for hour in user.hours %}
                                    {% if hour.date > date('monday this week') %}
                                        <tr>
                                            <td>{{ hour.hours }}</td>
                                            <td><a href="{{ path('work_orders_show', {'id': hour.workOrder.id }) }}">{{ hour.workOrder.titel }}</a></td>
                                            <td>{{ hour.date ? hour.date|date('Y-m-d H:i:s') : ''  }}</td>
                                            <td>{{ include('hours/_delete_form.html.twig') }}</td>
                                        </tr>
                                    {% endif %}
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>

{% endblock %}
